{
  "compileOnSave": false,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "ESNext",
    "moduleResolution": "node",
    "pretty": true,
    "newLine": "LF",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
  },
  "exclude": [
    "node_modules",
    "preload",
    "server"
  ]
}