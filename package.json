{
  "name": "minicraft-ts",
  "productName": "minicraft-ts",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "dist/server/server-bundle.js",
  "scripts": {
    "start": "npm-run-all build watch",
    "watch": "nodemon --ext ts,json,env --watch . --exec \"npm run build\" & electron-forge start",
    "build": "webpack --config webpack.config.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "lint": "gts lint",
    "prettier": "prettier .",
    "prettier:write": "prettier . --write",
    "clean": "gts clean",
    "fix": "gts fix",
    "publish": "electron-forge publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@cspell/eslint-plugin": "^8.8.1",
    "@electron-forge/cli": "^7.3.1",
    "@electron-forge/maker-deb": "^7.3.1",
    "@electron-forge/maker-rpm": "^7.3.1",
    "@electron-forge/maker-squirrel": "^7.3.1",
    "@electron-forge/maker-zip": "^7.3.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.3.1",
    "@electron-forge/plugin-fuses": "^7.3.1",
    "@electron-forge/plugin-webpack": "^7.4.0",
    "@electron/fuses": "^1.8.0",
    "@types/electron": "^1.6.10",
    "@types/node": "^20.12.11",
    "commitlint-plugin-tense": "^1.0.2",
    "copy-webpack-plugin": "^12.0.2",
    "cspell": "^8.8.1",
    "electron": "^29.2.0",
    "gts": "^5.3.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "node-loader": "^2.0.0",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "patch-package": "^8.0.0",
    "prettier": "^3.2.5",
    "ts-loader": "^9.5.1",
    "tslint": "^6.1.3",
    "typescript": "^5.4.5",
    "webpack-cli": "^5.1.4"
  },
  "keywords": [],
  "author": {
    "name": "Trey Tomes",
    "email": "trey.tomes@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "@types/convict": "^6.1.6",
    "canvas": "^2.11.2",
    "convict": "^6.2.4",
    "dotenv": "^16.4.5",
    "electron-squirrel-startup": "^1.0.0",
    "image-js": "^0.35.5",
    "ml-regression-base": "^3.0.0",
    "ml-regression-exponential": "^2.1.2",
    "webpack": "^5.91.0"
  },
  "lint-staged": {
    "*": "prettier --write",
    "*.{js,ts}": "eslint",
    "**,!.vscode/settings.json": "cspell --no-must-find-files"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "plugins": [
      "commitlint-plugin-tense"
    ],
    "rules": {
      "tense/subject-tense": [
        2,
        "always"
      ]
    }
  },
  "engines": {
    "node": "20.x"
  },
  "release": {
    "repositoryUrl": "git+https://github.com/treytomes/minicraft-ts",
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "chore",
              "release": "patch"
            }
          ]
        }
      ]
    ]
  }
}
